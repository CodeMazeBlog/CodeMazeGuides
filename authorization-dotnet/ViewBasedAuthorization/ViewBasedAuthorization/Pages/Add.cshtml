@page
@model ViewBasedAuthorization.Pages.AddModel
@{
}
<div class="container mt-5">
    <h1>Add New Document</h1>

    <form method="post">
        <div class="form-group my-2">
            <label for="Title">Title:</label>
            <input type="text" class="form-control" id="Title" name="Title" asp-for="Input.Title" />
        </div>

        <div class="form-group my-2">
            <label for="Content">Content:</label>
            <textarea class="form-control" id="Content" name="Content" asp-for="Input.Content"></textarea>
        </div>

        <button type="submit" class="btn btn-primary my-5">Add Document</button>
    </form>
</div>