@page
@model Firebase.Pages.Firestore.IndexModel
@{
    ViewData["Title"] = "Shoes";
}

<h2>Shoes</h2>
<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table shoe-table">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Brand</label>
            </th>
            <th>
                <label>Price</label>
            </th>
            <th>
                <label>Image</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shoe in Model.Shoes)
        {
            <tr>
                <td>
                    <label>@shoe.Id</label>
                </td>
                <td>
                    <label>@shoe.Name</label>
                </td>
                <td>
                    <label>@shoe.Brand</label>
                </td>
                <td>
                    <label>@shoe.Price</label>
                </td>
                <td>
                    <img src="@shoe.ImageUri" alt="shoe-image">
                </td>
            </tr>
        }
    </tbody>
</table>
